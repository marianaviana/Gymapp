<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title">Nova avaliação Pollock 7</h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for(@assessment, url: pollock7_path) do |f| %>
    <div class="form-inputs">
      <%= f.hidden_field :client_id, value: @client.id %>
      <%= f.input :weight, label: 'Peso:' %>
      <%= f.input :height, label: 'Altura:' %>
      <%= f.input :tricipital, label: 'Tricipital:' %>
      <%= f.input :suprailiaca, label: 'Supra-iliaca:' %>
      <%= f.input :coxa, label: 'Coxa:' %>
      <%= f.input :abdominal, label: 'Abdominal:' %>
      <%= f.input :peitoral, label: 'Peitoral:' %>
      <%= f.input :subescapular, label: 'Subescapular:' %>
      <%= f.input :axilar_media, label: 'Axilar Média:' %>
      <%= f.input :neck, label: 'Pescoço:' %>
      <%= f.input :shoulder, label: 'Ombro:' %>
      <%= f.input :chest, label: 'Tórax:' %>
      <%= f.input :waist, label: 'Cintura:' %>
      <%= f.input :abdomen, label: 'Abdome:' %>
      <%= f.input :hip, label: 'Quadril:' %>
      <%= f.input :right_arm, label: 'Braço Direito:' %>
      <%= f.input :left_arm, label: 'Braço Esquerdo:' %>
      <%= f.input :right_forearm, label: 'Antebraço Direito:' %>
      <%= f.input :left_forearm, label: 'Antebraço Esquerdo:' %>
      <%= f.input :right_thigh, label: 'Coxa Direita:' %>
      <%= f.input :left_thigh, label: 'Coxa Esquerda:' %>
      <%= f.input :right_calf, label: 'Panturrilha Direita:' %>
      <%= f.input :left_calf, label: 'Panturrilha Esquerda:' %>
      <%= f.input :next_assessment_date, html5: true, label: 'Próxima avaliação:' %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Salvar', class:'btn btn-success pull-right' %>
    </div>
    <% end %>

    <br />
    <%= link_to 'Voltar', assessments_path(client_id: @client.id) %>
  </div>
</div>
