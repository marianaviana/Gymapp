<!-- Avaliações Corporal -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title">Composição Corporal - Pollock 7 Dobras</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-6">
          <h3>Avaliado</h3>
          <table class ="table table-striped table-hover" >
            <thead>
              <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Gênero</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= @assessment.client.name %></td>
                <td><%= @assessment.client.age %></td>
                <td><%= @assessment.client.gender %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-md-6">
          <h3>Avaliação</h3>
          <table class ="table table-striped table-hover" >
            <thead>
              <tr>
                <th>Data</th>
                <th>Hora</th>
                <th>Protocolo</th>
                <th>Próxima avaliação</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= date_formatter(@assessment.created_at)%></td>
                <td><%= time_formatter(@assessment.created_at)%></td>
                <td><%= @assessment.type%></td>
                <td><%= date_formatter(@assessment.next_assessment_date) %></td>
              </tr>
            </tbody>
          </table>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Avaliador</th>
                <td><%= @assessment.employee.name %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <h3>Resultados</h3>
          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Gordura Atual</th>
                <td style="text-align:right"><%= @imc.imc %> %</td>
              </tr>

              <tr>
                <th>Ideal Minimo</th>
                <td style="text-align:right"><%= @imc.min %> %</td>
              </tr>

              <tr>
                <th>Ideal Máximo</th>
                <td style="text-align:right"><%= @imc.max %> %</td>
              </tr>
            </tbody>
          </table>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Peso Atual</th>
                <td style="text-align:right"><%= @assessment.weight %></td>
              </tr>

              <tr>
                <th>Ideal Minimo</th>
                <td style="text-align:right"><%= @imc.ideal_min_weight %></td>
              </tr>

              <tr>
                <th>Ideal Máximo</th>
                <td style="text-align:right"><%= @imc.ideal_max_weight %></td>
              </tr>
            </tbody>
          </table>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Peso Gordo</th>
                <td style="text-align:right"><%= @protocol7.fat_weight %></td>
              </tr>

              <tr>
                <th>Peso Magro</th>
                <td style="text-align:right"><%= @protocol7.lean_body_mass %></td>
              </tr>
            </tbody>
          </table>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Resultado</th>
                <td style="text-align:right"><%= "O imc é #{@imc.imc} e o resultado foi #{@imc.message}" %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <h3>Composição Corporal (Kg)</h3>
          <p>
            <%= high_chart("some_id", @chart) %>
          </p>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-6">
          <h3>Biometria</h3>
          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Massa Corporal</th>
                <td style="text-align:right"><%= @assessment.weight %> Kg</td>
              </tr>

              <tr>
                <th>Estatura</th>
                <td style="text-align:right"><%= @assessment.height %> cm</td>
              </tr>
            </tbody>
          </table>

          <h3>Dobras Cutâneas</h3>
          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Tricipital</th>
                <td style="text-align:right"><%= @assessment.tricipital %></td>
              </tr>

              <tr>
                <th>Peitoral</th>
                <td style="text-align:right"><%= @assessment.peitoral %> mm</td>
              </tr>

              <tr>
                <th>Subescapular</th>
                <td style="text-align:right"><%= @assessment.subescapular %></td>
              </tr>

              <tr>
                <th>Axilar-Média</th>
                <td style="text-align:right"><%= @assessment.axilar_media %> mm</td>
              </tr>

              <tr>
                <th>Suprailíaca</th>
                <td style="text-align:right"><%= @assessment.suprailiaca %> mm</td>
              </tr>

              <tr>
                <th>Abdominal</th>
                <td style="text-align:right"><%= @assessment.abdominal %> mm</td>
              </tr>

              <tr>
                <th>Coxa</th>
                <td style="text-align:right"><%= @assessment.coxa %> mm</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <h3>Perímetros</h3>
          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Pescoço</th>
                <td style="text-align:right"><%= @assessment.neck %> cm</td>
              </tr>

              <tr>
                <th>Ombro</th>
                <td style="text-align:right"><%= @assessment.shoulder %> cm</td>
              </tr>

              <tr>
                <th>Tórax</th>
                <td style="text-align:right"><%= @assessment.chest %> cm</td>
              </tr>

              <tr>
                <th>Cintura</th>
                <td style="text-align:right"><%= @assessment.waist %> cm</td>
              </tr>

              <tr>
                <th>Abdomem</th>
                <td style="text-align:right"><%= @assessment.abdomen %> cm</td>
              </tr>

              <tr>
                <th>Quadril</th>
                <td style="text-align:right"><%= @assessment.hip %> cm</td>
              </tr>
            </tbody>
          </table>
          <br/>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th colspan="1"></th>
                <th>Direito</th>
                <th>Esquerdo</th>
              </tr>
              <tr>
                <th>Braço</th>
                <td style="text-align:right"><%= @assessment.right_arm %> cm</td>
                <td style="text-align:right"><%= @assessment.left_arm %> cm</td>
              </tr>

              <tr>
                <th>Antebraço</th>
                <td style="text-align:right"><%= @assessment.right_forearm %> cm</td>
                <td style="text-align:right"><%= @assessment.left_forearm %> cm</td>
              </tr>

              <tr>
                <th>Coxa</th>
                <td style="text-align:right"><%= @assessment.right_thigh %> cm</td>
                <td style="text-align:right"><%= @assessment.left_thigh %> cm</td>
              </tr>

              <tr>
                <th>Panturrilha</th>
                <td style="text-align:right"><%= @assessment.right_calf %> cm</td>
                <td style="text-align:right"><%= @assessment.left_calf %> cm</td>
              </tr>
            </tbody>
          </table>

          <table class ="table table-striped table-hover" >
            <tbody>
              <tr>
                <th>Padrão de pontos</th>
                <td style="text-align:right">Pollock</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-12">
        
        <%= link_to 'Editar', edit_pollock3_path(@assessment, client_id: @client.id) %> |
        <%= link_to 'Voltar', assessments_path(client_id: @client.id) %>

      </div>

    </div>
  </div>
</div>
