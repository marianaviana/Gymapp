<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title td-name"><%= @equipment.name.capitalize %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <table class ="table table-striped table-hover" >
        <tbody>
          <tr>
            <th>Quantidade:</th>
            <td><%= @equipment.quantity %></td>
          </tr>
          <tr>
            <th>Data de aquisição:</th>
            <td><%= @equipment.aquisition_date %></td>
          </tr>
          <tr>
            <th>Peso:</th>
            <td><%= @equipment.weight %></td>
          </tr>
          <tr>
            <th>Peso suportado:</th>
            <td><%= @equipment.max_weight %></td>
          </tr>
        </tbody>
      </table>

      <%= link_to 'Editar', edit_equipment_path(@equipment) %> |
      <%= link_to 'Voltar', equipment_index_path %>
    </div>
  </div>
</div>
