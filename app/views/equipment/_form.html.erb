
<div class="row">

	<%= simple_form_for(equipment) do |f| %>
	<div class="field col-md-12">

		<%= f.input :name, label:'Nome' %>
	</div>

	<div class="field col-md-3">
		<%= f.input :quantity, label:'Quantidade' %>
	</div>

	<div class="field col-md-3">
		<%= f.input :aquisition_date, as: :date, label:'Data de Aquisição', html5:true %>
	</div>

	<div class="field col-md-3">
		<%= f.input :weight, label:'Peso do equipamento' %>
	</div>

	<div class="field col-md-3">
		<%= f.input :max_weight, label:'Peso máximo suportado' %>
	</div>

	<div class="actions col-md-12">
		<%= f.button :submit, 'Salvar Equipamento', class: 'btn btn-success' %>
	</div>
	<% end %>
</div>
