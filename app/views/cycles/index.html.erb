<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title">Ciclos da <%= @gymcard.name %></h3>
  </div>
  <div class="panel-body">
    <table class ="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Index</th>
          <th>Name</th>
          <th>Criada em</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>

        <% @cycles.each do |cycle| %>
          <tr>
            <td><%= cycle.index %></td>
            <td><%= cycle.name %></td>
            <td><%= date_formatter(cycle.created_at)%></td>
            <td><%= link_to 'Exibir', gymcard_cycle_path(@gymcard, cycle), class: "btn btn-default" %></td>
            <td><%= link_to 'Editar', edit_gymcard_cycle_path(@gymcard, cycle), class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Nova Ciclo', new_gymcard_cycle_path(@gymcard), class: 'btn btn-success col-md-12' %>

<%= link_to 'Voltar', gymcards_path(client_id: @gymcard.client.id) %>
