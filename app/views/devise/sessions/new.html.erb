      <div class="row">
      	<div class="col-md-4 col-md-offset-4">
      		<h1><small>Login de Conta</small></h1>

      		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      		<div class="well">
      			<%= f.input :email, label: 'Email', required: false, autofocus: true, placeholder:'email@email.com' %>
      			<%= f.input :password, label: 'Senha', required: false, placeholder:'•••••••••' %>
      			<%= f.input :remember_me, label: 'Lembrar-me', as: :boolean if devise_mapping.rememberable? %>
      		</div>

      		<div class="form-actions">
      			<%= f.button :submit, "Entrar" %>
      		</div>
      		<% end %>

      		<%= render "devise/shared/links" %>
      	</div>
      </div>
