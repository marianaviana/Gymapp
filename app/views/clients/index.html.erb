<p id="notice"><%= notice %></p>

<!-- Website Overview -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title">Clientes</h3>
    
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <input class="form-control" type="text" placeholder="Pesquisar cliente">
      </div>
    </div>
    <br>
    <table class ="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= link_to 'exibir', client, class: "btn btn-default" %></td>
          <td><%= link_to 'editar', edit_client_path(client), class: "btn btn-default" %></td>
          <td><%= link_to 'remover', client, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja remover?' }, class: "btn btn-danger" %></td>

        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

