<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title td-name"><%= @employee.name.capitalize %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <div class="row">
        <div class="col-xs-2 col-center-block">
          <%= image_tag @employee.avatar.url(:medium), class: 'img-responsive img-thumbnail img-circle' %>
          <h3 class="td-name"><%= @employee.position %></h3>
        </div>
      </div>

      <table class ="table table-striped table-hover" >
        <tbody>
          <tr>
            <th>Data de Nascimento</th>
            <td><%= date_formatter(@employee.birth_date) %></td>
          </tr>
          <tr>
            <th>email</th>
            <td><%= @employee.email %></td>
          </tr>
          <tr>
            <th>RG</th>
            <td><%= @employee.rg %></td>
          </tr>
          <tr>
            <th>cpf</th>
            <td><%= @employee.cpf %></td>
          </tr>
          <tr>
            <th>Telefone</th>
            <td><%= @employee.telephone %></td>
          </tr>
          <tr>
            <th>Admissão</th>
            <td><%= date_formatter(@employee.admission_date) %></td>
          </tr>
        </tr>
      </tbody>
    </table>

    <%= link_to 'Editar', edit_employee_path(@employee) %> |
    <%= link_to 'Voltar', employees_path %>
  </div>
</div>
</div>
