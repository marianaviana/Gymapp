<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title"><%= @employee.name %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <%= image_tag @employee.avatar.url(:medium), class: 'img-responsive img-thumbnail' %>
      <h3><%= @employee.position %></h3>

      <table class ="table table-striped table-hover" >
        <tbody>
          <tr>
            <th>Data de Nascimento</th>
            <td><%= date_formatter(@employee.birth_date) %></td>
          </tr>
          <tr>
            <th>RG</th>
            <td><%= @employee.rg %></td>
          </tr>
          <tr>
            <th>cpf</th>
            <td><%= @employee.cpf %></td>
          </tr>
          <tr>
            <th>Telefone</th>
            <td><%= @employee.telephone %></td>
          </tr>
          <tr>
            <th>Admissão</th>
            <td><%= date_formatter(@employee.admission_date) %></td>
          </tr>
        </tr>
      </tbody>
    </table>

    <%= link_to 'Editar', edit_employee_path(@employee) %> |
    <%= link_to 'Voltar', employees_path %>
  </div>
</div>
</div>
