<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h1 class="panel-title"><%= @gymcard.name %></h1>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <div>
        <table class ="table table-striped table-hover" >
          <tbody>
            <tr>
              <th>Cliente</th>
              <td class="td-name"><%= @gymcard.client.name.capitalize %></td>
            </tr>
            <tr>
              <th>Profissional</th>
              <td class="td-name"><%= @gymcard.employee.name.capitalize %> </td>
            </tr>
          </tbody>
        </table>
      </div>

      <% @gymcard.cycles.each do |cycle| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title"><%= cycle.name %></h1>
        </div>
        <div class="panel-body">
          <table class ="table table-striped" >
            <thead>
              <tr>
                <th>Nome:</th>
                <th>Grupo Muscular</th>
                <th>Exercício</th>
                <th>Equipamento:</th>
                <th>Série:</th>
                <th>Sequência:</th>
                <th>Peso:</th>
                <th>obs:</th>
              </tr>
            </thead>
            <tbody>
              <% cycle.workouts.each do |workout| %>
              <tr>
                <td class="td-name"><%= workout.name.capitalize %></td>
                <td class="td-name"><%= workout.equipment.try(:name) %></td>
                <td class="td-name"><%= workout.equipment.try(:name) %></td>
                <td class="td-name"><%= workout.equipment.try(:name)%></td>
                <td><%= workout.serie %></td>
                <td><%= workout.sequence %></td>
                <td><%= workout.load %></td>
                <td><%= workout.obs %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% end %>
      <%= link_to 'Voltar', gymcards_path(client_id: @client) %>
    </div>
  </div>
</div>
