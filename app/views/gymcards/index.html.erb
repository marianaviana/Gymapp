<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title"><%= @client.name %> - <%= date_formatter(@client.birth_date) %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <input class="form-control" type="text" placeholder="Selecionar cliente">
      </div>
    </div>
    <br>
    <table class ="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Fichas</th>
          <th>Criada em</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @gymcards.each do |gymcard| %>
        <tr>
          <td><%= gymcard.name %></td>
          <td>00/00/0000</td>
          <td><button type="" class="btn btn-default">Exibir</button></td>
          <td><button type="" class="btn btn-default">Editar</button></td>
          <td><button type="" class="btn btn-danger">Desabilitar</button></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<%= link_to 'Nova Ficha', new_gymcard_path(client_id: @client.id), class: 'btn btn-success col-md-12' %>