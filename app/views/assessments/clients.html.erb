<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title">Clientes</h3>

  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <input class="form-control" type="text" placeholder="Pesquisar cliente">
      </div>
    </div>
    <br>
    <table class ="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Nome</th>
          <th>Gênero</th>
          <th>Data de Nascimento</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= image_tag client.avatar.url(:medium), class: 'img-responsive img-thumbnail img-circle img-table' %> <%= client.name %></td>
            <td><%= client.gender %></td>
            <td><%= date_formatter(client.birth_date) %></td>
            <td><%= link_to 'exibir', assessments_path(client_id: client.id), class: "btn btn-default" %></td>
            <td><%= link_to 'editar', edit_client_path(client), class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
