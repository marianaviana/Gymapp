

<!-- Visão geral do site -->
<div class="panel panel-default">
  <div class="panel-heading main-color-bg">
    <h3 class="panel-title"><%= @client.name %> - <%= date_formatter(@client.birth_date) %></h3>
  </div>
  <div class="panel-body">
    <table class ="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Tipo de avaliação</th>
          <th>Data da avaliação</th>
          <th>Próxima avaliação</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @assessments.each do |assessment| %>
        <tr>
          <td><%= assessment.client.name %></td>
          <td><%= translate_type(assessment.type) %></td>
          <td><%= date_formatter(assessment.created_at) %></td>
          <td><%= date_formatter(assessment.next_assessment_date) %></td>
          <td><%= link_to 'exibir', show_path_by_type(assessment, @client.id), class: "btn btn-default" %></td>
          <td><%= link_to 'editar', edit_path_by_type(assessment, @client.id), class: "btn btn-default" %></td>
          <td><%= link_to 'remover', destroy_path_by_type(assessment, client_id: @client.id), method: :delete, data: { confirm: 'Você tem certeza que deseja remover?' }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <%= link_to 'Nova avaliação', new_assessment_path(client_id: @client.id), class: 'btn btn-success col-md-12' %>
</div>
