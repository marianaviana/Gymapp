      </thead>

      <tbody>
        <% @assessments.each do |assessment| %>
        <tr>
          <td><%= assessment.client_id %></td>
          <td>????????</td>
          <td>????????</td>
          <td><%= assessment.result %></td>
          <td><%= link_to 'exibir', assessment, class: "btn btn-default" %></td>
